doctype html
html(ng-app="myApp")
  head
    meta(charset='utf8')
    base(href='/')
    title Angular Express Seed App
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/app.css')
  body
    block body

    footer.row.marginTop
      div.col-md-5.col-md-offset-1.col-sm-6.col-sm-offset-1.col-xs-12
        div.well.well-lg.row
          div.col-md-3.col-sm-3.col-xs-3
            img.responsive(src='/images/todo.svg')
          div.col-md-8.col-md-offset-1.col-sm-8.col-sm-offset-1.col-xs-8.col-xs-offset-1
            p This to do application is brought to you by your friendly neighborhood student developer. To create this app, and many more, check out the Nashville Software School.
      div.col-md-4.col-md-offset-1.col-sm-5.col-xs-12
        div.list-group
          a.list-group-item(href='http://www.katerebekah.com')
            h4.list-group-item-heading More About Me
            p.list-group-item-text Check Out My Portfolio
          a.list-group-item(href='https://github.com/katerebekah/angular-express')
            h4.list-group-item-heading About the Code
            p.list-group-item-text Check Out the Github Repo


  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/controllers/indexCtrl.js')
  script(src='js/controllers/registerCtrl.js')
  script(src='js/controllers/loginCtrl.js')
  script(src='js/controllers/addCtrl.js')
  script(src='js/controllers/listCtrl.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='bower_components/jquery/dist/jquery.min.js')
