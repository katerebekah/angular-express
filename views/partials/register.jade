div.col-md-6.col-md-offset-3
  div.panel.panel-todo.marginTop
    div.panel-heading
      div.row
        div.col-md-3
          img.responsive(src='/images/todo.svg')
        div.col-md-9
          h3.title Register
    div.panel-body
      form(role='form', novalidate, name='userForm')
        div.form-group
          label Username
          input.form-control(type='text', name='username', ng-model='user.username' required, autofocus, ng-minlength='3')
        div.form-group
          label Password
          input.form-control(type='password', name='password', ng-model='user.password', required, ng-minlength='3')
        div.form-group
          label Confirm Password
          input.form-control(type='password')
        input.btn.btn-default(type='submit', value='Register', ng-show='userForm.$valid', ng-click='register()')

